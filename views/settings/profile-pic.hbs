<link rel="stylesheet" href="/stylesheets/auth-style.css" />
<link rel="stylesheet" href="/stylesheets/settings-style.css" />

<div class="create-login-position">
  <h1 class="register-title">Update Profile Photo:</h1>
  <form
    method="post"
    action="/settings/profile-pic"
    enctype="multipart/form-data"
  >

    <label for="file-upload" class="update-profile-photo-input">
      Upload profile image:
    </label>

    <input id="file-upload" type="file" name="image" />

    <div class="btn-container"><button
        type="submit"
        class="create-login-btn"
      >Submit Photo</button></div>
  </form>

  <div>
    {{#if img}}
      <img src="{{img}}" />
    {{/if}}
  </div>

</div>